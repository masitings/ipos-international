<div class="m-b-30">
    <h6 class="h6">{{ pimcore_input('freeTitle',{'placeholder':'title..'}) }}</h6>
    <div class="m-b-15 m-t-15 point-wrap">
        <ol>
            {% for i in pimcore_block('freeList').iterator %}
                <li>
                    <div class="d-flex align-items-center">
                                <span class="m-r-20">
                                    {{ pimcore_image('icon',{
                                        'thumbnail' : 'coverImg',
                                        'height' : 60,
                                        'hidetext' : true
                                    })
                                    }}
                                </span>
                        <span>{{ pimcore_input('freeText',{'placeholder':'text...'}) }}</span>
                    </div>
                </li>
            {% endfor %}

        </ol>
    </div>
    <p>{{  pimcore_wysiwyg("freeOtherTitle", {
                            "height": 150,
                            "placeholder" : "edit content..."
                        })
                        }}
</p>
    <div class="row">
        {% for i in pimcore_block('otherList').iterator %}
            <div class="col-12 col-lg-6">
                {% if editmode %}
                    {{ pimcore_link('clicklink',{'class':'annex m-b-0'}) }}

                {% else %}
                    {% set clicklink = pimcore_link('clicklink',{'class':'annex m-b-0'})%}
                    <a class="annex m-b-0" style="cursor:pointer;" data-bs-toggle="modal" data-bs-target="#subscribeNesletterModal_{{ i }}" data-bs-whatever="@mdo">
                        <span class="pdf-svg" style="background-image:url(/static/images/icon_pdf.d36de8b.svg)"></span>
                        <span class="annex-txt">{{ clicklink.data.text }}</span>
                        <span class="pdf-down" style="background-image:url(/static/images/icon_download.c4854a7.svg)"></span>
                    </a>
                    <div class="ipos-modal iframe-test modal fade" id="subscribeNesletterModal_{{ i }}" tabindex="-1" aria-hidden="true">
                        <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                        <div class="modal-dialog">
                            <div class="modal-content" style="height: 94vh;">
                                <iframe src="{{ clicklink.data.path | default('') }}" style="width: 100%; height: 100%;"></iframe>
                            </div>
                        </div>
                        <div class="thankyou-modal">
                            <div class="btn-close -close-tq-modal" data-bs-dismiss="modal" aria-label="Close"></div>
                            <div class="thankyou-modal__wrap">
                                <img class="m-b-20" src="/static/images/mail-fly.3358c4b.png" alt="">
                                <p class="txt-regular m-b-25">Thank you for your message. It has been sent. We will get back to you soon.</p>
                                <div class="btn btn__hollow -close-tq-modal" data-bs-dismiss="modal" aria-label="Close">Continue Browsing</div>
                            </div>
                        </div>
                    </div>

                {% endif %}
            </div>

        {% endfor %}


    </div>
</div>
<hr>
