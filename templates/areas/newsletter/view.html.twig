<div class="subscribe_now_container container">
    <div class="row">
        <div class="col-12 banner_row">
            <div class="bg_ipos d-block d-md-none" style="background-image:url(&quot;/static/images/banner_mobile_ipos.69e95d9.svg&quot;)"></div>
            <div class="bg_ipos d-none d-md-block" style="background-image:url(&quot;/static/images/banner_ipos.89cf6ba.svg&quot;)"></div>
            <div class="content_container">
                <p class="newsletter">{{ pimcore_input('newsletter',{'placeholder':'Newsletter'}) }}</p>
                <p class="content">{{ pimcore_input('content',{'placeholder' : 'content...'}) }}</p>


                {% if editmode  %}

                    {{ pimcore_link('subscribe') }}
                {% else %}
                    {% set mailChiLink =  pimcore_link('subscribe') %}
                    <a class="subscribe-button" type="button" data-bs-toggle="modal" data-bs-target="#subscribeNesletterModal" data-bs-whatever="@mdo">{{ mailChiLink.data.text | default(" Subscribe Now") }}</a>
                    <div class="ipos-modal iframe-test modal fade" id="subscribeNesletterModal" tabindex="-1" aria-hidden="true">
                        <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                        <div class="modal-dialog">
                            <div class="modal-content" style="height: 94vh;">
                                <iframe src="{{ mailChiLink.data.path | default('') }}" style="width: 100%; height: 100%;"></iframe>
                            </div>
                        </div>
                        <div class="thankyou-modal">
                            <div class="btn-close -close-tq-modal" data-bs-dismiss="modal" aria-label="Close"></div>
                            <div class="thankyou-modal__wrap">
                                <img class="m-b-20" src="/static/images/mail-fly.3358c4b.png" alt="">
                                <p class="txt-regular m-b-25">Thank you for your message. It has been sent. We will get back to you soon.</p>
                                <div class="btn btn__hollow -close-tq-modal" data-bs-dismiss="modal" aria-label="Close">Continue Browsing</div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
