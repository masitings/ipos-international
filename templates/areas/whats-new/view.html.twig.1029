<section class="sec-what-new p-t-100" id="secWhatNew">
    <div class="container">
        <h2 class="ipos-title text-center m-b-30">What's New</h2>

        <div class="sec-what-new__row row lg-p-l-60 lg-p-r-20">
            <div class="col-lg-7">
                {% if editmode %}
                    {{ pimcore_relation("objectPaths",{
                        "types": ["object"],
                        "classes" : [
                            "Course",
                            "Events",
                            "News",
                            "Articles",
                            "Business",
                            "CaseStudy",
                            "PatentAnalytic",
                            "WebinarRecordings"
                        ]
                    }) }}
                {% else %}
                    {% if pimcore_relation("objectPaths").getElement()  %}
                        {% set list = pimcore_relation("objectPaths").getElement() %}
                        <div class="new-box lg-m-r-15">
                            <div class="new-box__upper">
                                {% if list.coverImage is not empty %}
                                    {{ list.coverImage.thumbnail('coverImg').html({imgAttributes:{class:'img-fluid'}}) | raw }}
                                {% endif %}

                            </div>
                            <div class="new-box__bottom">
                                <div class="new-box__bottom__top">
                                    <div class="categories-tag">
                                        {% if list.className == 'News' %}
                                            News & Announcements
                                        {% elseif list.className == 'Events' %}
                                            Upcoming Events
                                        {% else %}
                                            {{ list.className | upper }}
                                        {% endif %}
                                    </div>
                                    <h3 class="new-box-title m-t-10">{{ list.title }}</h3>
                                </div>
                                <div class="new-box__bottom__bottom">
                                    {% if list.className == 'News' %}
                                        <a href="/News{{ list.fullPath }}_{{ list.getId() }}">Find out more</a>
                                    {% else %}
                                        <a href="{{ list.fullPath }}_{{ list.getId() }}">Find out more</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endif %}


            </div>
