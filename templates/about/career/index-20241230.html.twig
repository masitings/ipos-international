                        IPOS International proudly holds the Progressive Wage Mark.
                    </p>
                </div>
            </div>
        </section>
        <!-- Explore Section -->
        <section class="explore-section">
            <div class="container courses_tab_content_item active">
                <h2>{{ pimcore_input('cardWrapperTitle',{'placeholder' : 'card wrapper title'}) }}</h2>
                <div class="explore-cards row">
                    <!-- Card 1: Our People & Culture -->
                    <div class="courses_tab_content_item_card col-lg-6">
                        <div class="tools_image card_image">
                            {{ pimcore_image("cardImg1", {
                                "height": 1570,
                                "thumbnail": "advisoryOverview"
                            }) }}
                            {#<img class="cover" src="/static/images/tools.40b83c3.png" alt="">#}
                        </div>
                        <div class="card_content">
                            <div class="card_content_top">
                                <div class="title">{{ pimcore_input('cardTitle1',{'placeholder' : 'card title 1'}) }}</div>
                                <div class="description">
                                    {{  pimcore_wysiwyg("cardDescription1", {
                                        "placeholder" : "edit content 1..."
                                        })
                                    }}
                                </div>
                            </div>
                            {{ pimcore_link('linkUrl1',{
                                'noText' : true,
                                'class' : 'find-out',
                                'textSuffix' : '<span class="find-out">Find out more</span>'
                            }) }}
                        </div>
                    </div>
                    <div class="courses_tab_content_item_card col-lg-6">
                        <div class="tools_image card_image">
                            {{ pimcore_image("cardImg2", {
                                "height": 1570,
                                "thumbnail": "advisoryOverview"
                            }) }}
                            {#<img class="cover" src="/static/images/tools.40b83c3.png" alt="">#}
                        </div>
                        <div class="card_content">
                            <div class="card_content_top">
                                <div class="title">{{ pimcore_input('cardTitle2',{'placeholder' : 'card title 2'}) }}</div>
                                <div class="description">
                                    {{  pimcore_wysiwyg("cardDescription2", {
                                        "placeholder" : "edit content 1..."
                                    })
                                }}
                                </div>
                            </div>
                            {{ pimcore_link('linkUrl2',{
                                'noText' : true,
                                'class' : 'find-out',
                                'textSuffix' : '<span class="find-out">Find out more</span>'
                            }) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Social Media Section -->
        <section class="social-media-section">
            <div class="container">
                <h3 style="color: #000; margin-bottom: 20px;">{{ pimcore_input('bottomBannerTitle',{'placeholder' : 'Stay connected with us'}) }}</h3>
                <div class="social-icons">
                    {% set socialLink1 = pimcore_link('socialLink1', {
                        'noText' : true,
                        'target' : '_blank'
                    }) %}
                    {% set socialImage1 = pimcore_image('socialImage1') %}

                    {% if socialImage1 %}
                        {% if socialLink1 %}
                            <a href="{{ socialLink1.href }}" target="{{ socialLink1.target }}" title="{{ socialLink1.text }}">
                                {{ socialImage1|raw }}
                            </a>
                        {% else %}
                            {{ socialImage1|raw }}
                        {% endif %}
                    {% endif %}
                    {# <a href="https://www.facebook.com" target="_blank" style="text-decoration: none;">
                        <img src="/static/static/assets/images/common/fb.svg" alt="Facebook" width="50" height="50" />
                    </a> #}
                    <a href="https://www.linkedin.com" target="_blank" style="text-decoration: none;">
                        <img src="/static/static/assets/images/common/in.svg" alt="LinkedIn" width="50" height="50" />
                    </a>
                    <a href="https://twitter.com" target="_blank" style="text-decoration: none;">
                        <img src="/static/static/assets/images/common/twitter.svg" alt="Twitter" width="50" height="50" />
                    </a>
                    <a href="https://www.instagram.com" target="_blank" style="text-decoration: none;">
                        <img src="/static/static/assets/images/common/ig.svg" alt="Instagram" width="50" height="50" />
                    </a>
                    <a href="https://www.youtube.com" target="_blank" style="text-decoration: none;">
                        <img src="/static/static/assets/images/common/yt.svg" alt="YouTube" width="50" height="50" />
                    </a>
                    <a href="https://www.tiktok.com" target="_blank" style="text-decoration: none;">
                        <img src="/static/static/assets/images/common/tiktok.svg" alt="TikTok" width="50" height="50" />
                    </a>
                </div>
            </div>
        </section>
    </section>
  <script src="/static/static/js/shares.js?v={{ random() }}"></script>
  <script src="http://vjs.zencdn.net/5.4.4/video.js"></script>
