                                        </div>
                                    </div>
                                        <script>
                                        $("#contactSubject").change(function(){
                                            var response = $(this).val();
                                            if(response.toLowerCase() == "general enquiry"){
                                                $("#contactSourceLabel").html("How did you find out about IPOS International?");
                                            }
                                            else if(response.toLowerCase() == "business enquiry"){
                                                $("#contactSourceLabel").html("How did you find out about IPOS International?");
                                            }
                                            else if(response.toLowerCase() == "academy programme"){
                                                $("#contactSourceLabel").html("How did you find out about our Academy programmes?");
                                            }
                                            else if(response.toLowerCase() == "ia chat session"){
                                                $("#contactSourceLabel").html("How did you find out about our IA Chat session?");
                                            }
                                        });
                                        $("#contactSource").change(function(){
                                            var response = $(this).val();
                                            if(response == "Others"){
                                                $("#infoSourceOthers").removeClass("hidden");
                                                $("#infoSourceOthers").addClass("show");
                                            }
                                            else{
                                                $("#contactSourceOthers").val("");
                                                $("#infoSourceOthers").addClass("hidden");
                                                $("#infoSourceOthers").removeClass("show");
                                            }
                                        });
                                        </script>

                                        
