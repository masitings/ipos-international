                            </nav>
                            <div class="d-block d-md-none mobile_nav"><span class="back_arrow">&lt; </span>
                                <span class="back_txt">Home</span>
                            </div>
                        </div>
                    </div>
                </div>

                {{ pimcore_areablock("Headline-block", {
                    "allowed": [
                        "overview-headlines"
                    ]
