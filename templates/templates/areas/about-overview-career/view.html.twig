<div class="resources_container">
    <div class="split-vertical-line" style="margin: 0"></div>
    <div class="webinar_recordings_container">
        <img class="right-i d-none d-md-block" src="/static/images/pc_right_i.e10a53e.svg">
        <div class="container">
            <div class="row" style="position:relative">
                <p class="p_title">{{ pimcore_input('webinarTitle',{'placeholder' : 'career...'}) }}</p>

                {% if editmode %}
                    {{ pimcore_relations('objectsAll',{
                        "types": ["object"],
                        "classes" : [
                            "Career"
                        ]
                    }) }}

		<div class="view-all-layout">
                        {{ pimcore_link('webinarLink',{
                            'class' : 'view-all'
                        }) }}
                    </div>

                {% else %}
                    {% set list = pimcore_relations('objectsAll') %}
		{% set careerLink = pimcore_link('webinarLink') %}
                    {% if list is not empty %}
                        {% for career in list %}
                            <div class="col-md-6 col-12">
                                <a class="tab-card-item d-block" href="{{ career }}_{{ career.getId() }}">
                                    <div class="card-top">
                                        <img class="img-bg" src="/static/images/ribbon.f4e9e6a.svg">
                                        {% if career.coverImage is not empty %}
                                            {{ career.coverImage.thumbnail('coverImg').html({imgAttributes:{class:'img-resoure'}}) | raw }}
                                        {% endif %}

                                    </div>
                                    <div class="card-bottom">
                                        <div class="title">{{ career.title }}</div>
                                        {#<div class="time-date-view d-flex flex-row align-items-center">
                                            <span class="time-icon"></span>
                                            <span class="time-txt">{{ career.videoTime }}</span>
                                        </div>#}
                                    </div>
                                </a>
                            </div>
                        {% endfor %}

			<div class="view-all-layout">
                        <a class="view-all" href="{{ careerLink.getHref() }}" target="_blank">{{ careerLink.getText() }}</a>
                    </div>


                    {% endif %}
                {% endif %}

            </div>
        </div>
    </div>
</div>
