<section class="discover-section">
    <div style="margin: auto;">
        <div class="discover-content">
            <!-- Image Section -->
            <div class="discover-image">
                {{ pimcore_image("overviewTool", {
                    "class" : "cover",
                    "thumbnail": "overviewTool"
                }) }}
                {# <img src="/static/static/assets/images/credential_banner.457068b.png" alt="Discover Career" /> #}
            </div>
            <!-- Text Section -->
            <div class="discover-text">
                <div class="discover-text-wrapper">
                    <h2>
                        {{ pimcore_input('title',{'placeholder' : 'title'}) }}
                    </h2>
                    <p>
                            {{  pimcore_wysiwyg("specialContent", {
                                "placeholder" : "edit content..."
                            })
                        }}
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>