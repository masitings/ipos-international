<div class="webinar_recordings_container">
    <img class="right-i d-none d-md-block" src="/static/images/pc_right_i.e10a53e.svg">
    <div class="container">
        <div class="row">
            {% set webinarList =  list.filterByResourceType('Webinar Recordings') %}
            {% set webinarCount = webinarList.getTotalCount() %}
            <p class="p_title">Webinar Recordings

                {% for key, webinar in webinarList %}
                {% if webinar.coverView == true and key == 0 %}
            <div class="col-md-6 col-12">
                <a class="tab-card-item d-block" href="{{ webinar }}_{{ webinar.getId() }}">
                    <div class="card-top">
                        <img class="img-bg" src="/static/images/ribbon.f4e9e6a.svg">
                        <img class="img-resoure" src="/static/images/webinar-recordings-thumb.e1660f8.png"></div>
                    <div class="card-bottom">
                        <div class="title">{{ webinar.title }}</div>
                        <div class="time-date-view d-flex flex-row align-items-center">
                            <span class="time-icon"></span>
                            <span class="time-txt">{{ webinar.videoTime }}</span></div>
                    </div>
                </a>
            </div>
            {% endif %}

            {% endfor %}

            <div class="col-md-6 col-12 d-flex flex-column">
                {% for key, webinar in webinarList %}
                    {% if webinar.coverView == true and key != 0 and key < viewCount %}
                        <a class="tab-card-item flex-item-space-between" href="{{ webinar }}_{{ webinar.getId() }}">
                            <div class="card-bottom not_top">
                                <div class="title">{{ webinar.title }}</div>
                                <div class="time-date-view d-flex flex-row align-items-center">
                                    <span class="time-icon"></span>
                                    <span class="time-txt">{{ webinar.videoTime }}</span>
                                </div>
                            </div>
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
            </p>
        </div>
        <div class="view-all-layout">
            <a class="view-all">View all</a>
            {{ pimcore_link('webinar',{'class' : 'view-all'}) }}
        </div>
    </div>
</div>
