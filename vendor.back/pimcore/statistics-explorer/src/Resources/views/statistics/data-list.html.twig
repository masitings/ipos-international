<div class="table-responsive">

    {% if data is empty %}

        <div class="alert alert-warning" role="alert">
            No results
        </div>

    {% else %}
        <table class="table table-hover table-sm">


            <thead>

                <tr>

                    {% for columnHeader in columnHeaders %}

                        <th scope="col" colspan="{{ columnHeader['subColumns'] }}">
                            {{ columnHeader['label'] }}
                        </th>

                    {% endfor %}

                </tr>

            </thead>
            <tbody>
                {% for dataRow in data  %}

                    <tr>

                        {% for columnHeader in columnHeaders %}
                            <td>{{ (dataRow[columnHeader['dataKey']]) | default('-')  }}</td>
                        {% endfor %}

                    </tr>
                {% endfor %}


            </tbody>
        </table>
    {% endif %}
</div>